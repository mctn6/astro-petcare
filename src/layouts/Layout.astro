---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Professional pet care services for your furry family members" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  </head>
  <body>
    <header class="fixed w-full bg-white/90 backdrop-blur-sm shadow-sm z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold text-blue-600">PETCARE</a>
          <div class="hidden md:flex space-x-8">
            <a href="#services" class="text-gray-600 hover:text-blue-600">Services</a>
            <a href="#about" class="text-gray-600 hover:text-blue-600">About</a>
            <a href="#contact" class="text-gray-600 hover:text-blue-600">Contact</a>
          </div>
          <a href="#contact" class="bg-blue-600 text-white px-6 py-2 rounded-full font-semibold hover:bg-blue-700 transition-colors">
            Book Now
          </a>
        </div>
      </nav>
    </header>
    <slot />
    <script>
      import AOS from 'aos';
      import 'aos/dist/aos.css';
      
      document.addEventListener('DOMContentLoaded', () => {
        AOS.init({
          duration: 800,
          once: true,
          disable: 'mobile'
        });
      });
    </script>
  </body>
</html>